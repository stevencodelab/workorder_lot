<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_in_mrp_product_template_form" model="ir.ui.view">
            <field name="name">in_mrp_product_template_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
               <page string="Data Barang Produksi" name="data_barang_produksi">
                        <group>
                            <group name="group_general">
                                <field name="nama_desain"/>
                                <field name="no_mesin"/>
                                <field name="berat"/>
                                <field name="warna"/>
                                <field name="type_kk"/>
                                <field name="tgl_buat"/>
                            </group>
                            <group name="group_data_material">
                                <group name="main_grp_1" colspan="2">
                                    <group name="main_grp_col_1">
                                        <field name="gum_stretch_x"/>
                                        <field name="gum_stretch_y"/>
                                        <field name="gum_relaxed_x"/>
                                        <field name="gum_relaxed_y"/>
                                    </group>
                                    <group name="main_grp_col1">
                                        <field name="leg_gum_stretch_x"/>
                                        <field name="leg_gum_stretch_y"/>
                                        <field name="leg_gum_relaxed_x"/>
                                        <field name="leg_gum_relaxed_y"/>
                                    </group>
                                </group>
                                <group name="main_grp_2" colspan="2">
                                    <group name="main_grp_col_2">
                                        <field name="leg_stretch_x"/>
                                        <field name="leg_stretch_y"/>
                                        <field name="leg_relaxed_x"/>
                                        <field name="leg_relaxed_y"/>
                                    </group>
                                    <group name="main_grp_col2">
                                        <field name="foot_stretch_x"/>
                                        <field name="foot_stretch_y"/>
                                        <field name="foot_relaxed_x"/>
                                        <field name="foot_relaxed_y"/>
                                    </group>
                                </group>
                                <group name="main_grp_3" colspan="2">
                                    <group name="main_grp_col_3">
                                        <field name="foot_gum_stretch_x"/>
                                        <field name="foot_gum_stretch_y"/>
                                        <field name="foot_gum_relaxed_x"/>
                                        <field name="foot_gum_relaxed_y"/>
                                    </group>
                                    <group name="main_grp_col3">
                                        <field name="hell_stretch_x"/>
                                        <field name="hell_stretch_y"/>
                                        <field name="hell_relaxed_x"/>
                                        <field name="hell_relaxed_y"/>
                                    </group>
                                </group>
                            </group>
                        </group>
                    </page>
                    <page string="Data Bahan Produksi" name="data_bahan_produksi">
                        <group>
                            <field name="kode_benang"/>
                            <field name="no_warna_benang"/>
                            <field name="jenis_benang"/>
                            <field name="warna_benang"/>
                            <field name="size"/>
                            <field name="style"/>
                            <field name="kategori"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>